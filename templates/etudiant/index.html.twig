{% extends 'base.html.twig' %}

{% block title %}Etudiant index{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#myTable').DataTable();
        });
    </script>
{% endblock %}

{% block body %}
    <div class="data-table-container">
        <div class="data-table-header">
            <h1 class="data-table-title">Liste des Étudiants</h1>
            <a href="{{ path('app_etudiant_new') }}" class="btn-new">
                Ajouter un nouvel étudiant
            </a>
        </div>

        <div class="data-table-wrapper">
            <table class="data-table" id="myTable">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Email</th>
                    <th>Année</th>
                    <th>Filière</th>
                    <th>Telephone</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for etudiant in etudiants %}
                    <tr>
                        <td>{{ etudiant.id }}</td>
                        <td>{{ etudiant.nom }}</td>
                        <td>{{ etudiant.prenom }}</td>
                        <td>{{ etudiant.email }}</td>
                        <td>{{ etudiant.refPromotion.annee }}</td>
                        <td>{{ etudiant.refPromotion.filiere }}</td>
                        <td>{{ etudiant.telephone }}</td>
                        <td>
                            <a href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}" class="btn-action" title="Voir">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}" class="btn-action" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="no-data">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
