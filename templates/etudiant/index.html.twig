{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/data-tables.css') }}">
{% endblock %}

{% block body %}
    {% include '_partials/data_table.html.twig' with {
        title: 'Liste des Étudiants',
        create_path: 'app_etudiant_new',
        columns: [
            { label: 'ID', property: 'id', class: 'col-id' },
            { label: 'Nom', property: 'nom' },
            { label: 'Prénom', property: 'prenom' },
            { label: 'Email', property: 'email' },
            { label: 'Téléphone', property: 'telephone' }
        ],
        actions: [
            { type: 'view', path: 'app_etudiant_show', label: 'Voir', title: 'Voir détails' },
            { type: 'edit', path: 'app_etudiant_edit', label: 'Modifier', title: 'Modifier' },
            { type: 'delete', path: 'app_etudiant_delete', label: 'Suppr.', title: 'Supprimer' }
        ],
        data: etudiants
    } %}
{% endblock %}
