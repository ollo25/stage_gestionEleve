{% extends 'base.html.twig' %}

{% block title %}Nouveau Stage{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
    <style>
        .form-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            padding: 30px;
        }

    </style>
{% endblock %}

{% block nav  %}
{% endblock %}
{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-container animate__animated animate__fadeInUp">
                    <div class="form-header">
                        <h2 class="mb-0"><i class="fas fa-briefcase me-2"></i> Nouveau Stage</h2>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        {{ form_label(form.Poste, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.Poste, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.Description, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.Description, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_label(form.DateDebut, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.DateDebut, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.DateFin, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.DateFin, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.refEntreprise, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.refEntreprise, {'attr': {'class': 'form-select'}}) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_stage_index') }}" class="btn-gradient">
                            <i class="fas fa-arrow-left me-2"></i> Retour Ã  la liste
                        </a>
                        <button type="submit" class="btn-gradient">
                            <i class="fas fa-save me-2"></i> Enregistrer
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
