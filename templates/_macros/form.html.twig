{% macro input_ligne(form_input,theme=true) %}
    <div class="row mb-6">
        <!--begin::Label-->
        <label class="col-md-4 col-form-label fw-semibold fs-6">{{ form_label(form_input) }}</label>
        <!--end::Label-->

        <!--begin::Col-->
        <div class="col-md-8 fv-row fv-plugins-icon-container">
            {% if theme %}
            {{ form_widget(form_input, { 'attr': {'class': 'form-control form-control-lg form-control-solid  bg-opacity-80 bg-secondary'}}) }}
            {% else %}
            {{ form_widget(form_input) }}
            {% endif %}
            <div class="form-text">
                {{ form_help(form_input) }}
            </div>
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                <div data-field="country" data-validator="notEmpty">{{ form_errors(form_input) }}</div>
            </div>
        </div>
        <!--end::Col-->
    </div>
{% endmacro %}

