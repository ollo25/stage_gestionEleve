{% extends 'base.html.twig' %}

{% block title %}Convocation index{% endblock %}

{% block body %}
    <h1>Convocation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Motif</th>
                <th>Description</th>
                <th>ActionMiseEnPlace</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for convocation in convocations %}
            <tr>
                <td>{{ convocation.id }}</td>
                <td>{{ convocation.Date ? convocation.Date|date('Y-m-d') : '' }}</td>
                <td>{{ convocation.Motif }}</td>
                <td>{{ convocation.Description }}</td>
                <td>{{ convocation.ActionMiseEnPlace }}</td>
                <td>{% if convocation.Etat %}
                        <span class="badge bg-success">Inscrit</span>
                    {% else %}
                        <span class="badge bg-danger">Non inscrit</span>
                    {% endif %}</td>
                <td>
                    <a href="{{ path('app_convocation_show', {'id': convocation.id}) }}">show</a>
                    <a href="{{ path('app_convocation_edit', {'id': convocation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_convocation_new') }}">Create new</a>
{% endblock %}
