{% extends 'base.html.twig' %}
{% import "_macros/breadcumb.html.twig" as _breadcumb %}

{% block title %}Les entreprises{% endblock %}
{% block titre_page %}Liste des entreprises{% endblock %}
{% block action_page %}
    <a href="{{ path('app_entreprise_new') }}" class="btn btn-sm btn-primary ms-3 px-4 py-3" >Nouvelle Entreprise</a>

{% endblock %}
{% block Breadcrumb %}
    {{ _breadcumb.etape("Entreprise") }}
    {{ _breadcumb.etape("Ajout d'une nouvelme entreprise") }}
{% endblock %}
{% block body %}
    <div class="card card-flush">
        <!--begin::Header-->
        <div class="card-header border-0 pt-5 pb-3">
            <!--begin::Heading-->
            <div class="card-title align-items-start flex-column">
                <!--begin::Search-->
                <div class="w-175px position-relative my-1">
                    <!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
                    <span class="svg-icon svg-icon-3 svg-icon-gray-500 position-absolute top-50 translate-middle ms-6">
                                     <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                         <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
                                         <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
                                     </svg>
                                </span>
                    <!--end::Svg Icon-->
                    <input data-kt-dataTable-filter="search" id="search" type="text" class="form-control form-control-sm form-control-solid ps-10" name="search" value="" placeholder="Rechercher" />
                </div>
                <!--end::Search-->
            </div>
            <!--end::Heading-->

        </div>
        <!--end::Header-->
        <div class="card-body pt-0">
            <div class="table-responsive">

                <table id="kt_dataTable" class="table table-striped table-bordered gy-5 gs-7">
                    <thead>
                    <tr>
                        <th>Nom de l'entreprise</th>
                        <th>Numero de Siret</th>
                        <th>Adresse</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entreprise in entreprises %}
                        <tr>
                            <td>{{ entreprise.nom }}</td>
                            <td>{{ entreprise.siret }}</td>
                            <td>{{ entreprise.adresse }}</td>
                            <td>
                                <a href="{{ path('app_entreprise_show', {'id': entreprise.id}) }}" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

