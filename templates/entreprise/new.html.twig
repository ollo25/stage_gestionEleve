{% extends 'base.html.twig' %}

{% block title %}Nouvelle Entreprise{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/adresse_autocomplete.js') }}" defer></script>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-container animate__animated animate__fadeInUp">
                    <div class="form-header">
                        <h2 class="mb-0"> Nouvelle Entreprise</h2>
                    </div>

                    <div class="form-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="form-group-animated">
                            {{ form_widget(form.nom, {'attr': {
                                'class': 'form-control-custom',
                                'placeholder': ' ',
                                'id': 'nom'
                            }}) }}
                            <label for="nom"><i class="fas fa-signature me-2"></i>Nom de l'entreprise</label>
                        </div>

                        <div class="form-group-animated">
                            {{ form_widget(form.siret, {'attr': {
                                'class': 'form-control-custom',
                                'placeholder': ' ',
                                'id': 'siret'
                            }}) }}
                            <label for="siret"><i class="fas fa-id-card me-2"></i>Num√©ro SIRET</label>
                        </div>
                        <div class="form-group-animated position-relative">
                            {{ form_widget(form.adresse, {
                                'attr': {
                                    'class': 'form-control-custom',
                                    'placeholder': ' ',
                                    'id': 'autocomplete-input',
                                    'autocomplete': 'off'
                                }
                            }) }}
                            <label for="adresse"><i class="fas fa-id-card me-2"></i>Adresse</label>
                            <div id="autocomplete-suggestions" class="autocomplete-suggestions"></div>
                            <div id="suggestions" class="suggestions-container"></div>  {# conteneur pour afficher les suggestions #}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_entreprise_index') }}" class="btn-gradient">
                                <i class="fas fa-arrow-left me-2"></i> Retour
                            </a>
                            <button type="submit" class="btn-gradient">
                                <i class="fas fa-save me-2"></i> Enregistrer
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

        <script src="{{ asset('js/adresse_autocomplete.js') }}"></script>

{% endblock %}



